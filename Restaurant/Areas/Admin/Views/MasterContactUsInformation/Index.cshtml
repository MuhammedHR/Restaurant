                        {
                            <a asp-action="Active" asp-route-id="@item.MasterContactUsInformationId">
                                <i class="ri-eye-fill text-success  fa-2xl"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-action="Active" asp-route-id="@item.MasterContactUsInformationId">
                                <i class="ri-eye-close-fill text-danger  fa-2xl"></i>
                            </a>
                        }
