            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditDate)
            </th> *@
                <th>Operation</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListMasterContactUsInformation) {
        <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.MasterContactUsInformationId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.MasterContactUsInformationIdesc)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.MasterContactUsInformationIconUrl)
                    @* <img src="~/ImageApp/@item.MasterContactUsInformationImageUrl" style="max-width:50px" alt="jjj" /> *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MasterContactUsInformationRedirect)
            </td>
       
                    <td class="align-middle text-center">
                        
                        <a asp-action="Edit" asp-route-id="@item.MasterContactUsInformationId"><i class="bi bi-pencil-square"></i></a>

                        <a href="" class="csBtnDelete" data-bs-toggle="modal" data-bs-target="#exampleModal"
