@model Restaurant.ViewModels.HomeModel

<!DOCTYPE html>

<html>
<head>
  
    
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>FireFly Burger - Restaurant</title>
    <meta name="description" content="">
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>
</head>
<body>
    <header class="header-area transparent-bar header-black">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                    <div class="logo">
                        <a asp-action="index" asp-controller="Home">
                            <img  style="WIDTH: 102PX; MARGIN-TOP: -22PX;" class="logo-sticky" alt="" src="~/ImageApp/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                            <img style="WIDTH: 123PX; MARGIN-TOP: -41PX;" class="logo-normal" alt="" src="~/ImageApp/@Model.SystemSetting.SystemSettingLogoImageUrl2">

                        </a>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                    <div class="menu-search-bundle">
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    @foreach (var item in Model.ListMenu)
                                    {
                                        <li class="top-hover">
                                            <a asp-action="@item.MasterMenuUrl" asp-controller="Home">@item.MasterMenuName </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                        <div class="search-wrap">
                            <button class="search-toggle">
                                <i class="fa fa-search"></i>
                            </button>
                            <div class="search">
                                <form action="#">
                                    <input type="search" placeholder="Search here">
                                    <button type="submit">
                                        Search
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mobile-menu-area d-md-block d-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                    <div class="mobile-menu">
                        <nav id="mobile-menu-active">
                            <ul class="menu-overflow">

                                @foreach (var item in Model.ListMenu)
                                {
                                    <li>
                                        <a asp-action="@item.MasterMenuUrl" asp-controller="Home"> > @item.MasterMenuName</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>



    <div>
        @RenderBody()
    </div>

    <footer class="footer-area">
        <div class="footer-area-top black-bg pt-95 pb-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>About Us</h4>
                            </div>
                            <div class="footer-about">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>
                                <div class="footer-map">
                                    <a href="https://www.google.com/maps/place/Firefly+Burger+Jabal+Amman/31.957889,35.8893435,14z/data=!4m20!1m13!4m12!1m4!2m2!1d35.896468!2d31.9628955!4e1!1m6!1m2!1s0x151b5f8483b00047:0x31b1d82d5f45ba5a!2sFirefly+Burger+Jabal+Amman,+Rainbow+St.+53-59,+Amman!2m2!1d35.9240167!2d31.9504228!3m5!1s0x151b5f8483b00047:0x31b1d82d5f45ba5a!8m2!3d31.950401!4d35.9240036!16s%2Fg%2F11c5_y45nb?entry=ttu" target="_blank"><i class="ion-ios-location-outline"></i> View on map</a>
                                </div>

                            </div>
                            @foreach (var item in Model.ListSocialMedium)
                            {

                                <div class="social-icon">

                                    <a href=" @item.MasterSocialMediaUrl" target="_blank">
                                    <img style="width: 20%;float:left" alt="" src="~/ImageApp/@item.MasterSocialMediaIcon">
                                    </a>

                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>contact Us</h4>
                            </div>
                            <div class="footer-cont-info">
                                @foreach (var item in Model.ListContactUsInformation)
                                {
                                    if (item.MasterContactUsInformationRedirect == "footer")
                                    {
                                        <div class="single-footer-cont-info">
                                            <div class="cont-info-icon">
                                                @Html.Raw(item.MasterContactUsInformationIconUrl)
                                            </div>
                                            <div class="cont-info-content">
                                                <p>
                                                    @item.MasterContactUsInformationIdesc

                                                </p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>

                        </div>

                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Opening Time</h4>
                            </div>
                            @foreach (var item in Model.ListWorkingHour)
                            {
                                <div class="open-time pr-30">
                                    <ul>
                                        <li>
                                            @item.MasterWorkingHoursIdName
                                            <span>@item.MasterWorkingHoursIdTimeFormTo</span>
                                        </li>

                                    </ul>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Newsletter</h4>
                            </div>
                            <div class="newsletter-style">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do.</p>
                                <div id="mc_embed_signup" class="subscribe-form ">
                                    <form asp-action="Newsletter" id="mc-embedded-subscribe-form" class="validate">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="TransactionBookTable.TransactionBookTableId" value="0" hidden>
                                        <div id="mc_embed_signup_scroll" class="mc-form">
                                            <input asp-for="TransactionNewsletter.TransactionNewsletterEmail" class="email" type="email" required="" placeholder="Enter your email">
                                            <span asp-validation-for="TransactionNewsletter.TransactionNewsletterEmail" class="text-danger"></span>
                                            <div class="mc-news" aria-hidden="true">
                                                <input type="hidden" value="" tabindex="-1" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef">
                                            </div>
                                            <div class="clear">
                                                <input id="mc-embedded-subscribe" class="button" type="submit" name="subscribe" value="Subscribe">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom black-bg-2 pb-25 pt-25">
            <div class="container">
                <div class="copyright text-center">
                    <p>@Model.SystemSetting.SystemSettingCopyright</p>
                </div>
            </div>
        </div>
    </footer>





    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/ajax-mail.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>

