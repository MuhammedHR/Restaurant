@model Restaurant.ViewModels.HomeModel


@{
    Layout = "_LayoutPage";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/4.png);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Item Details</h3>
            <ul>
                <li>
                    <a asp-action ="Index" asp-controller="Home">Home</a>
                </li>
                <li>
                    <a asp-action="Menu" asp-controller="Home">Menu</a>
                </li>
                <li class="active"> Details </li>
            </ul>
        </div>
    </div>
</div>
<div class="blog-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-9 ">
                <div class="blog-details-wrapper">
                    <div class="single-blog-wrapper">
                        <div class="blog-img mb-30">
                            @foreach(var item in Model.ListItemMenu)
                            {
                                if (item.MasterItemMenuId ==Model.MasterItemMenu.MasterItemMenuId)
                                {
                                    <a href="#">
                                        <img alt="" src="~/ImageApp/@item.MasterItemMenuImageUrl">

                                    </a>
                                     <span class="blogpost-time-date">
                                <span class="date">@item.MasterItemMenuDate.Value.Day</span>
                                        <span type="date">@item.MasterItemMenuDate.Value.ToString("MMM")</span>
                            </span>
                       
                        <h2>
                            @item.MasterItemMenuTitle
                        </h2>
                        <p> @item.MasterItemMenuDesc </p>

                                }
                            }
                           
                           </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
