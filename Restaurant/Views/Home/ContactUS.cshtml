@model Restaurant.ViewModels.HomeModel



@{
    Layout = "_LayoutPage";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/4.png);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Contact us</h3>
            <ul>
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-message-wrapper">
                    <h4 class="contact-title mb-25">Leave Us a Message</h4>
                    <div class="contact-message">
                        <form asp-action="ContactUS" id="contact-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="TransactionContactU.TransactionContactUId" hidden>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsFullName"  placeholder="Full Name" >
                                        <span asp-validation-for="TransactionContactU.TransactionContactUsFullName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsEmail" placeholder="Email Address">

                                        <span asp-validation-for="TransactionContactU.TransactionContactUsEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsSubject" placeholder="Subject">
                                        <span asp-validation-for="TransactionContactU.TransactionContactUsSubject" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style">
                                        <textarea asp-for="TransactionContactU.TransactionContactUsMessage" placeholder="Message"></textarea>
                                        <span asp-validation-for="TransactionContactU.TransactionContactUsMessage" class="text-danger"></span>

                                        <button class="submit btn-style" style="background-color:black ; color:white" type="submit">SEND MESSAGE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info-area">
                    <h4 class="contact-title mb-18">Contact Us</h4>
                    <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                    <div class="contact-info-wrap">
                           @foreach (var item in Model.ListContactUsInformation)
                                {
                            if (item.MasterContactUsInformationRedirect == "contactus")
                            {
                                <div class="single-contact-info mb-40">
                                    <div class="contact-info-icon">
                                        @Html.Raw(item.MasterContactUsInformationIconUrl)
                                    </div>
                                    <div class="contact-info-content">
                                    @Html.Raw(item.MasterContactUsInformationIdesc)
                                    </div>
                                </div>
                            }

                                }
                     
                    </div>
                </div>
            </div>
        </div>
        <div class="map-area pt-100">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d27083.182116898988!2d35.86830334310205!3d31.95010410182991!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151ca0f3c3f2d0dd%3A0x78f70515eb6b4cde!2sAbdun%20Al%20Shmali%2C%20Amman!5e0!3m2!1sen!2sjo!4v1703331789879!5m2!1sen!2sjo" width="600" height="450" style="border:0; width: 100%;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>